[push]
    default = simple

[core]
    pager = LESS=FRSXQ less

[color]
    branch = auto
    diff = auto
    status = auto

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[alias]
    st = status -s
    ci = commit
    cia = commit -a
    ciam = commit -am
    co = checkout
    cob = checkout -b
    undo = reset --hard HEAD
    branches = branch --list --all
    opendiff = difftool --tool=opendiff -Y
    incoming = "!git remote update -p; git log ..@{u}"
    outgoing = "!CB=$(git rev-parse --abbrev-ref HEAD) && git fetch origin && git log origin/$CB..$CB"
   
    # Shows colored log with tag/branch, short description and author.
    ls = log --pretty=format:\"%C(yellow)%h%C(reset) %cd %C(cyan)%cn%C(reset) %s %C(green)%d%C(reset)\" --date=short
    
    # Same as ls - Shows last commit.
    head = !git ls HEAD^..HEAD

[merge]
    tool = opendiff

[url "git@github.com:"]
  insteadOf = "gh:"
  pushInsteadOf = "https://github.com/"
  pushInsteadOf = "http://github.com/"
  pushInsteadOf = "git://github.com/"

[url "git@bitbucket.org:"]
    insteadOf = "bb:"
    pushInsteadOf = "https://bitbucket.org/"
    pushInsteadOf = "http://bitbucket.org/"
    pushInsteadOf = "git://bitbucket.org/"
